{
  "mcpServers": {
    "shopify-dev-mcp": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@shopify/dev-mcp@latest"
      ],
      "env": {
        "LIQUID_VALIDATION_MODE": "full"
      }
    },
    "playwright-mcp": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@executeautomation/playwright-mcp-server"
      ]
    },
    "browser-devtools": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@cloudflare/mcp-server-browser-devtools"
      ]
    }
  }
}