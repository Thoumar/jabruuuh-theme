{% comment %}
  Comparison table section - Hardcoded data comparing with competitors
{% endcomment %}

<section id="compare" class="comparison-section">
  <div class="container">
    <div class="comparison-header fade-in">
      <h2 class="text-medium">{{ section.settings.heading }}</h2>
      {% if section.settings.subheading != blank %}
        <p class="text-caption">{{ section.settings.subheading }}</p>
      {% endif %}
    </div>

    <div class="table-wrapper fade-in">
      <table class="compare-table">
        <thead>
          <tr>
            <th class="col-feature">Fonctionnalité</th>
            <th class="col-competitor">{{ section.settings.competitor_name }}</th>
            <th class="col-us">{{ section.settings.our_product_name }}</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td class="col-feature">Captation Micro</td>
            <td class="col-competitor">Omni standard (2018)</td>
            <td class="col-us">Matrice 8 Micros + IA</td>
          </tr>
          <tr>
            <td class="col-feature">Matériaux</td>
            <td class="col-competitor">Plastique recyclé</td>
            <td class="col-us">Aluminium & Magnésium</td>
          </tr>
          <tr>
            <td class="col-feature">Portée vocale</td>
            <td class="col-competitor">2.5 mètres</td>
            <td class="col-us">
              5 mètres
              <span class="tested-badge">TESTÉ</span>
            </td>
          </tr>
          <tr>
            <td class="col-feature">Annulation de bruit</td>
            <td class="col-competitor">Passive</td>
            <td class="col-us">IA Neural en temps réel</td>
          </tr>
          <tr>
            <td class="col-feature">Connectivité</td>
            <td class="col-competitor">Bluetooth 4.2</td>
            <td class="col-us">Bluetooth 5.3 + USB-C</td>
          </tr>
          <tr>
            <td class="col-feature">Garantie</td>
            <td class="col-competitor">1 an standard</td>
            <td class="col-us">3 ans Pro</td>
          </tr>
          <tr class="price-row">
            <td class="col-feature">Prix Moyen Constaté</td>
            <td class="col-competitor">~{{ section.settings.competitor_price }}</td>
            <td class="col-us highlight-price">{{ section.settings.our_price }}</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</section>

{% stylesheet %}
  .comparison-section {
    padding: calc(var(--section-spacing) * 1.2) 0;
    background: var(--color-background);
  }

  .comparison-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .comparison-header .text-caption {
    margin-top: 15px;
  }

  .table-wrapper {
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
  }

  .compare-table {
    width: 100%;
    border-collapse: collapse;
    border-spacing: 0;
  }

  .compare-table th {
    text-align: left;
    padding: 20px;
    font-size: 1.3rem;
    font-weight: 600;
    border-bottom: 1px solid var(--color-border);
    white-space: nowrap;
  }

  .compare-table td {
    padding: 20px;
    border-bottom: 1px solid var(--color-border);
    font-size: 1.1rem;
    line-height: 1.5;
  }

  .col-feature {
    color: var(--color-text-secondary);
    font-size: 0.9rem !important;
    width: 30%;
    min-width: 150px;
  }

  .col-competitor {
    color: var(--color-text-secondary);
    width: 35%;
    min-width: 180px;
  }

  .col-us {
    color: var(--color-foreground);
    font-weight: 600;
    width: 35%;
    min-width: 180px;
  }

  .tested-badge {
    font-size: 0.7rem;
    color: var(--color-accent);
    background: rgba(0, 113, 227, 0.1);
    padding: 2px 6px;
    border-radius: 4px;
    margin-left: 8px;
    font-weight: 600;
    white-space: nowrap;
  }

  .price-row {
    font-size: 1.15rem;
  }

  .highlight-price {
    color: var(--color-accent);
    font-size: 1.25rem;
  }

  @media (max-width: 768px) {
    .comparison-section {
      padding: 80px 0;
    }

    .comparison-header {
      margin-bottom: 40px;
    }

    .compare-table {
      font-size: 0.9rem;
    }

    .compare-table th {
      font-size: 1.1rem;
      padding: 15px 10px;
    }

    .compare-table td {
      padding: 15px 10px;
      font-size: 0.9rem;
    }

    .col-feature {
      font-size: 0.8rem !important;
    }

    .tested-badge {
      display: block;
      margin-top: 5px;
      margin-left: 0;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Comparison Table",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Le rapport de force a changé."
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Pourquoi payer une technologie héritée au prix fort ?"
    },
    {
      "type": "text",
      "id": "competitor_name",
      "label": "Competitor name",
      "default": "Leader du marché (Série 750)"
    },
    {
      "type": "text",
      "id": "our_product_name",
      "label": "Our product name",
      "default": "Jabruuuh One"
    },
    {
      "type": "text",
      "id": "competitor_price",
      "label": "Competitor price",
      "default": "450 € HT"
    },
    {
      "type": "text",
      "id": "our_price",
      "label": "Our price",
      "default": "300 € HT"
    }
  ],
  "presets": [
    {
      "name": "Comparison Table"
    }
  ]
}
{% endschema %}
