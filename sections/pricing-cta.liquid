{% comment %}
  Pricing/CTA section with dark background
{% endcomment %}

{% assign product = all_products['jabruuuh-one'] %}

<section id="buy" class="pricing-section">
  <div class="container">
    <div class="pricing-content fade-in">
      <h2>{{ section.settings.heading }}</h2>

      <div class="price-display">
        {% if product and product.price %}
          {{ product.price | money_without_trailing_zeros }}
        {% else %}
          {{ section.settings.fallback_price }}
        {% endif %}
      </div>

      {% if section.settings.roi_text != blank %}
        <p class="roi-text">{{ section.settings.roi_text }}</p>
      {% endif %}

      <div class="cta-buttons">
        {% if product %}
          <a href="{{ product.url }}" class="btn btn-primary btn-large pricing-btn">
            {{ section.settings.cta_text }}
          </a>
        {% else %}
          <a href="{{ routes.all_products_collection_url }}" class="btn btn-primary btn-large pricing-btn">
            {{ section.settings.cta_text }}
          </a>
        {% endif %}
      </div>

      {% if section.settings.show_trust_badges %}
        <p class="trust-badges">
          {{ section.settings.trust_badge_1 }} •
          {{ section.settings.trust_badge_2 }} •
          {{ section.settings.trust_badge_3 }}
        </p>
      {% endif %}
    </div>
  </div>
</section>

{% stylesheet %}
  .pricing-section {
    background: #111;
    color: white;
    padding: calc(var(--section-spacing) * 1.2) 0;
    text-align: center;
  }

  .pricing-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .pricing-section h2 {
    margin-bottom: 20px;
    color: white;
    font-size: clamp(2rem, 4vw, 2.5rem);
  }

  .price-display {
    font-size: clamp(4rem, 10vw, 6rem);
    font-weight: 700;
    letter-spacing: -2px;
    margin: 20px 0;
    background: linear-gradient(180deg, #fff, #888);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1;
  }

  .roi-text {
    color: #888;
    font-size: 1.1rem;
    max-width: 500px;
    margin: 0 auto 40px;
    line-height: 1.6;
  }

  .cta-buttons {
    display: flex;
    justify-content: center;
    gap: 15px;
    margin-bottom: 30px;
    flex-wrap: wrap;
  }

  .pricing-btn {
    background: white;
    color: #111 !important;
    padding: 15px 40px;
    font-weight: 600;
  }

  .pricing-btn:hover {
    background: #f0f0f0;
    transform: scale(1.02);
  }

  .trust-badges {
    font-size: 0.9rem;
    color: #666;
    margin-top: 30px;
  }

  @media (max-width: 768px) {
    .pricing-section {
      padding: 80px 0;
    }

    .price-display {
      font-size: 4rem;
    }

    .roi-text {
      font-size: 1rem;
      padding: 0 20px;
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }

    .pricing-btn {
      width: 100%;
      max-width: 300px;
    }

    .trust-badges {
      font-size: 0.85rem;
      padding: 0 20px;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Pricing CTA",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Investissez dans la clarté."
    },
    {
      "type": "text",
      "id": "fallback_price",
      "label": "Fallback price (if product not found)",
      "default": "300 €"
    },
    {
      "type": "textarea",
      "id": "roi_text",
      "label": "ROI text",
      "default": "Le coût d'une réunion ratée à cause de l'audio dépasse largement le prix de cet appareil."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA button text",
      "default": "Commandez pour votre entreprise"
    },
    {
      "type": "checkbox",
      "id": "show_trust_badges",
      "label": "Show trust badges",
      "default": true
    },
    {
      "type": "text",
      "id": "trust_badge_1",
      "label": "Trust badge 1",
      "default": "Livraison J+1 offerte"
    },
    {
      "type": "text",
      "id": "trust_badge_2",
      "label": "Trust badge 2",
      "default": "Garantie Pro 3 ans"
    },
    {
      "type": "text",
      "id": "trust_badge_3",
      "label": "Trust badge 3",
      "default": "Retour 30 jours"
    }
  ],
  "presets": [
    {
      "name": "Pricing CTA"
    }
  ]
}
{% endschema %}
