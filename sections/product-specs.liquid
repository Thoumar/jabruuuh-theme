{% comment %}
  Technical specifications section with grid layout
{% endcomment %}

<section id="specs" class="specs-section">
  <div class="container">
    <div class="specs-header fade-in">
      <h2 class="text-medium">{{ section.settings.heading }}</h2>
      {% if section.settings.subheading != blank %}
        <p class="text-caption">{{ section.settings.subheading }}</p>
      {% endif %}
    </div>

    <div class="specs-grid fade-in">
      {% for block in section.blocks %}
        <div class="spec-card" {{ block.shopify_attributes }}>
          <div class="spec-value" style="{% if block.settings.value_color %}color: {{ block.settings.value_color }};{% endif %}">
            {{ block.settings.value }}
          </div>
          <div class="spec-label">{{ block.settings.label }}</div>
          <p class="spec-desc">{{ block.settings.description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% stylesheet %}
  .specs-section {
    padding: var(--section-spacing) 0;
    background: var(--color-background-secondary);
  }

  .specs-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .specs-header .text-caption {
    margin-top: 15px;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .specs-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 40px;
    max-width: 100%;
    width: 100%;
  }

  .spec-card {
    background: var(--color-background);
    padding: 40px;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-sm);
    transition: transform 0.3s var(--transition-smooth);
  }

  .spec-card:hover {
    transform: translateY(-5px);
  }

  .spec-value {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 10px;
    color: var(--color-accent);
  }

  .spec-label {
    font-weight: 600;
    font-size: 1.1rem;
    margin-bottom: 5px;
    color: var(--color-foreground);
  }

  .spec-desc {
    font-size: 0.95rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin: 0;
  }

  @media (max-width: 768px) {
    .specs-section {
      padding: 100px 0;
    }

    .specs-header {
      margin-bottom: 40px;
    }

    .specs-grid {
      grid-template-columns: 1fr;
      gap: 24px;
    }

    .spec-card {
      padding: 30px;
    }

    .spec-value {
      font-size: 2rem;
    }
  }
{% endstylesheet %}

