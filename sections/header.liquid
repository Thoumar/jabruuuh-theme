<header class="site-header">
  <div class="header-container">
    <div class="header-logo">
      <a href="{{ routes.root_url }}">
        <img src="{{ 'logo.png' | asset_url }}" alt="{{ shop.name }}" class="logo-image" width="40" height="40">
      </a>
    </div>

    <nav class="header-nav">
      <a href="#specs">{{ section.settings.link_1_text | default: 'Spécifications' }}</a>
      <a href="#compare">{{ section.settings.link_2_text | default: 'Comparatif' }}</a>
      <a href="#buy" class="btn-header btn-primary">{{ section.settings.cta_text | default: 'Acheter' }}</a>
    </nav>

    {% comment %} Mobile menu toggle {% endcomment %}
    <div class="header-mobile-toggle hidden-desktop">
      <button id="mobile-menu-toggle" aria-label="Toggle menu">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="3" y1="12" x2="21" y2="12"></line>
          <line x1="3" y1="6" x2="21" y2="6"></line>
          <line x1="3" y1="18" x2="21" y2="18"></line>
        </svg>
      </button>
    </div>
  </div>
</header>

{% stylesheet %}
  .site-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: 54px;
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    z-index: 1000;
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
  }

  .header-container {
    max-width: 80%;
    margin: 0 auto;
    padding: 0 max(24px, var(--page-margin));
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .header-logo {
    display: flex;
    align-items: center;
  }

  .header-logo a {
    display: flex;
    align-items: center;
    text-decoration: none;
    line-height: 0;
  }

  .logo-image {
    height: 40px;
    width: 40px;
    object-fit: contain;
    display: block;
  }

  .header-nav {
    display: flex;
    align-items: center;
    gap: 24px;
  }

  .header-nav a {
    font-size: 0.85rem;
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .header-nav a:hover {
    color: var(--color-foreground);
  }

  .btn-header {
    padding: 8px 16px;
    font-size: 0.9rem;
  }

  .btn-header.btn-primary {
    background-color: var(--color-accent);
    color: white;
    border: 2px solid var(--color-accent);
    border-radius: var(--border-radius);
    transition: all 0.3s ease;
  }

  .btn-header.btn-primary:hover {
    background-color: var(--color-accent-hover);
    border-color: var(--color-accent-hover);
  }

  .header-mobile-toggle {
    display: none;
  }

  .header-mobile-toggle button {
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
    color: var(--color-foreground);
  }

  /* Add spacing to body to account for fixed header */
  body {
    padding-top: 54px;
  }

  /* Smooth scroll behavior */
  html {
    scroll-behavior: smooth;
  }

  @media (max-width: 768px) {
    .header-nav {
      display: none;
    }

    .header-mobile-toggle {
      display: block;
    }

    .logo-image {
      height: 36px;
      width: 36px;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo text",
      "default": "Jabruuuh Pro"
    },
    {
      "type": "text",
      "id": "link_1_text",
      "label": "Navigation link 1",
      "default": "Spécifications"
    },
    {
      "type": "text",
      "id": "link_2_text",
      "label": "Navigation link 2",
      "default": "Comparatif"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA button text",
      "default": "Acheter"
    }
  ]
}
{% endschema %}
