{% comment %}
  Hero section with product showcase for Jabruuuh One
{% endcomment %}

{% assign product = all_products['jabruuuh-one'] %}

<section class="hero-section">
  <div class="container">
    <div class="hero-content fade-in">
      {% if section.settings.show_badge %}
        <span class="hero-badge">{{ section.settings.badge_text }}</span>
      {% endif %}

      <h1 class="text-large">{{ section.settings.heading }}</h1>

      <p class="hero-subtitle">
        {{ section.settings.subtitle }}
      </p>

      <div class="hero-cta-group">
        {% if product %}
          <a href="{{ product.url }}" class="btn btn-primary btn-large">
            {{ section.settings.primary_cta }}
          </a>
        {% else %}
          <a href="#buy" class="btn btn-primary btn-large">
            {{ section.settings.primary_cta }}
          </a>
        {% endif %}

        <a href="#compare" class="btn btn-text">
          {{ section.settings.secondary_cta }} →
        </a>
      </div>

      <div class="product-stage">
        <div class="product-image-container">
          {{ 'product.png' | asset_url | image_tag: loading: 'eager', class: 'product-hero-image', alt: 'Jabruuuh One Product' }}
        </div>
      </div>
    </div>
  </div>
</section>

{% stylesheet %}
  .hero-section {
    padding-top: 120px;
    padding-bottom: 80px;
    text-align: center;
    background: var(--color-background);
    min-height: 90vh;
    display: flex;
    align-items: center;
  }

  .hero-content {
    width: 100%;
  }

  .hero-badge {
    color: var(--color-badge);
    font-size: 0.8rem;
    font-weight: 600;
    margin-bottom: 10px;
    display: inline-block;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .hero-section h1 {
    margin-bottom: 20px;
  }

  .hero-subtitle {
    max-width: 600px;
    margin: 0 auto 40px;
    font-size: 1.5rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
  }

  .hero-cta-group {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 20px;
    margin-bottom: 60px;
    flex-wrap: wrap;
  }


  .product-stage {
    margin-top: 60px;
    position: relative;
    height: 400px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .product-image-container {
    max-width: 600px;
    margin: 0 auto;
  }

  .product-hero-image {
    width: 100%;
    height: auto;
    object-fit: contain;
  }

  /* CSS Product Mockup (Placeholder) */
  .device-mockup {
    width: 380px;
    height: 380px;
    background: radial-gradient(circle at 30% 30%, #f0f0f0, #dcdcdc);
    border-radius: 50%;
    box-shadow:
      0 20px 40px rgba(0, 0, 0, 0.1),
      inset 0 0 0 1px rgba(255, 255, 255, 0.5),
      inset 0 0 60px rgba(0, 0, 0, 0.05);
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
  }

  .device-grid {
    width: 90%;
    height: 90%;
    background-image: radial-gradient(#aaa 1px, transparent 1px);
    background-size: 6px 6px;
    border-radius: 50%;
    opacity: 0.5;
  }

  .device-interface {
    position: absolute;
    width: 80px;
    height: 80px;
    background: #1a1a1a;
    border-radius: 50%;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 0.7rem;
    font-weight: 600;
  }

  @media (max-width: 768px) {
    .hero-section {
      padding-top: 60px;
      padding-bottom: 40px;
      min-height: auto;
    }

    .hero-subtitle {
      font-size: 1.1rem;
    }

    .hero-cta-group {
      flex-direction: column;
      gap: 15px;
    }

    .product-stage {
      min-height: 300px;
      margin-top: 40px;
    }

    .device-mockup {
      width: 280px;
      height: 280px;
    }

    .device-interface {
      width: 60px;
      height: 60px;
      font-size: 0.6rem;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Hero Product",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_badge",
      "label": "Show badge",
      "default": true
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge text",
      "default": "Nouveau"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Dominez vos réunions"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "La qualité d'un studio d'enregistrement dans la paume de votre main. Envoloppeé dans un aluminium de qualité aérospatial"
    },
    {
      "type": "text",
      "id": "primary_cta",
      "label": "Primary CTA text",
      "default": "Commander le Jabruuuh One"
    },
    {
      "type": "text",
      "id": "secondary_cta",
      "label": "Secondary CTA text",
      "default": "Pourquoi la concurrence est dans notre retroviseur ?"
    },
    {
      "type": "image_picker",
      "id": "product_image",
      "label": "Product image",
      "info": "Leave empty to show CSS mockup placeholder"
    }
  ],
  "presets": [
    {
      "name": "Hero Product"
    }
  ]
}
{% endschema %}
