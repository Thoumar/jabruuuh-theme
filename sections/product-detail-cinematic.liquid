{% comment %}
  Cinematic product detail section - Split layout
{% endcomment %}

<section class="cinematic-section">
  <div class="container">
    <div class="cinematic-grid fade-in">
      <div class="cinematic-content">
        <h2>{{ section.settings.heading }}</h2>
        <p class="cinematic-description">{{ section.settings.description }}</p>

        {% if section.settings.show_features %}
          <div class="cinematic-features">
            {% if section.settings.feature_1 != blank %}
              <div class="feature-item">
                <div class="feature-icon">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="20 6 9 17 4 12"></polyline>
                  </svg>
                </div>
                <p>{{ section.settings.feature_1 }}</p>
              </div>
            {% endif %}
            {% if section.settings.feature_2 != blank %}
              <div class="feature-item">
                <div class="feature-icon">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="20 6 9 17 4 12"></polyline>
                  </svg>
                </div>
                <p>{{ section.settings.feature_2 }}</p>
              </div>
            {% endif %}
            {% if section.settings.feature_3 != blank %}
              <div class="feature-item">
                <div class="feature-icon">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="20 6 9 17 4 12"></polyline>
                  </svg>
                </div>
                <p>{{ section.settings.feature_3 }}</p>
              </div>
            {% endif %}
          </div>
        {% endif %}
      </div>

      <div class="cinematic-image">
        <img src="{{ 'detailed-view-product.png' | asset_url }}" alt="Detailed product view" loading="lazy" width="800" height="800">
      </div>
    </div>
  </div>
</section>

{% stylesheet %}
  .cinematic-section {
    padding: var(--section-spacing) 0;
    background: var(--color-background);
  }

  .cinematic-section .container {
    max-width: 70rem;
  }

  .cinematic-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: center;
  }

  .cinematic-content {
    padding-right: 40px;
  }

  .cinematic-section h2 {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    margin-bottom: 24px;
    color: var(--color-foreground);
    font-weight: 700;
    letter-spacing: -0.03em;
    line-height: 1.1;
  }

  .cinematic-description {
    font-size: 1.3rem;
    line-height: 1.6;
    color: var(--color-text-secondary);
    margin-bottom: 48px;
  }

  .cinematic-features {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .feature-item {
    display: flex;
    align-items: flex-start;
    gap: 16px;
  }

  .feature-icon {
    flex-shrink: 0;
    width: 32px;
    height: 32px;
    background: var(--color-accent);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
  }

  .feature-icon svg {
    width: 16px;
    height: 16px;
  }

  .feature-item p {
    font-size: 1.05rem;
    line-height: 1.6;
    color: var(--color-foreground);
    margin: 0;
    padding-top: 4px;
  }

  .cinematic-image {
    background: var(--color-background-secondary);
    border-radius: var(--border-radius);
    overflow: hidden;
    position: relative;
    aspect-ratio: 1;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .cinematic-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  @media (max-width: 768px) {
    .cinematic-grid {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .cinematic-content {
      padding-right: 0;
      order: 2;
    }

    .cinematic-image {
      order: 1;
    }

    .cinematic-section h2 {
      font-size: 2.5rem;
    }

    .cinematic-description {
      font-size: 1.1rem;
      margin-bottom: 32px;
    }

    .cinematic-features {
      gap: 20px;
    }

    .feature-item p {
      font-size: 1rem;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Product Detail Cinematic",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Chaque détail compte."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Du traitement du signal à la finition du châssis, rien n'a été laissé au hasard."
    },
    {
      "type": "checkbox",
      "id": "show_features",
      "label": "Show features list",
      "default": true
    },
    {
      "type": "text",
      "id": "feature_1",
      "label": "Feature 1",
      "default": "Grille perforée au laser pour une précision acoustique maximale"
    },
    {
      "type": "text",
      "id": "feature_2",
      "label": "Feature 2",
      "default": "Pieds en silicone haute densité pour isolation vibratoire"
    },
    {
      "type": "text",
      "id": "feature_3",
      "label": "Feature 3",
      "default": "Finition anodisée résistante aux rayures et empreintes"
    }
  ],
  "presets": [
    {
      "name": "Product Detail Cinematic"
    }
  ]
}
{% endschema %}
